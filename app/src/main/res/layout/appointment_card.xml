<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/neutral_light"
    app:strokeColor="@color/neutral_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/appointment_date_text"
            style="@style/TextAppearance.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 january 2025"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appointment_time_text"
            style="@style/TextAppearance.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:30"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1_text"
            style="@style/TextAppearance.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Doctor :"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_date_text" />

        <TextView
            android:id="@+id/doctor_name_text"
            style="@style/TextAppearance.SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Andi Wijaya, SpKK"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/appointment_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/button_detail_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/appointment_meet_button"
            app:layout_constraintTop_toBottomOf="@id/doctor_name_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/appointment_meet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_meet_text"
            app:layout_constraintBottom_toBottomOf="@id/appointment_detail_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/appointment_detail_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
