<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <!-- Header Title -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Let’s discuss the skin issues you’re currently experiencing"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- User Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ellipse_shape"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uswtunhsanah_"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/10/2024"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="461dp"
        android:background="#2A2D34"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="ExtraText">

        <!-- EditText for Text Input -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:hint="Enter your skin issue description here..."
            android:minHeight="48dp"
            android:padding="16dp"
            android:textSize="16sp" />


        <!-- ImageView to display uploaded image -->

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:text="Upload Image" />

        <ImageView
            android:id="@+id/imageViewUploaded"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:contentDescription="Uploaded Image"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>