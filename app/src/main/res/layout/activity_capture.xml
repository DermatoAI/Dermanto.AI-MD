<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CaptureActivity">

    <ImageView
        android:id="@+id/button1_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/preview_container_frame"
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1_button">

        <androidx.camera.view.PreviewView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageView
        android:id="@+id/gallery_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="34dp"
        android:background="@color/black"
        app:layout_constraintEnd_toStartOf="@id/analyze_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/preview_container_frame" />

    <ImageView
        android:id="@+id/analyze_button"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        app:layout_constraintEnd_toStartOf="@id/camera_button"
        app:layout_constraintStart_toEndOf="@id/gallery_button"
        app:layout_constraintTop_toBottomOf="@id/preview_container_frame" />

    <ImageView
        android:id="@+id/camera_button"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="34dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/analyze_button"
        app:layout_constraintTop_toBottomOf="@id/preview_container_frame" />


</androidx.constraintlayout.widget.ConstraintLayout>